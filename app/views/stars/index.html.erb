<h1 class="text-center">Info People</h1>

<table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stars.each do |star| %>
      <tr>
        <td><%= link_to image_tag(star.image, size: '100', class: "img img-rounded img-responsive"), star  %></td>    
        <td> <strong> <%= link_to star.name.capitalize, star %> </strong> </td>
        <td>
          <%= link_to star  do %>
            <i class="fa fa-file fa-2x" ></i>
          <% end %>
          <p></p>
          <%= link_to edit_star_path(star) do %>
            <i class="fa fa-pencil-square-o fa-2x"></i>
          <% end %>
        </td>
        <!--td><%#= link_to 'Editar', edit_star_path(star) %></td>
        <td><%#= link_to 'Excluir', star, method: :delete %></td-->
      </tr>
    <% end %>
  </tbody>
</table>

